<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/helloworld/getitembyid" method="GET">
        <service class="Bss\HelloWorld\Api\GetItemByIdInterface" method="getItemById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/helloworld/getproductidbysku" method="GET">
        <service class="Bss\HelloWorld\Api\GetProductIdBySkuInterface" method="getProductIdBySku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>